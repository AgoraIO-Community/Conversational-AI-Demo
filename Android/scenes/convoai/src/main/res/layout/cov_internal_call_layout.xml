<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:background="@android:color/transparent"
    tools:background="@color/ai_fill4">

    <LinearLayout
        android:id="@+id/layout_india"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/layout_chile"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintWidth_percent="0.8">

        <TextView
            android:id="@+id/tv_india_emoji"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="ðŸ‡®ðŸ‡³"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_india_code"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            tools:text="IN"
            android:textColor="@color/ai_icontext1"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_india_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/cov_phone_number_background"
            android:clickable="true"
            android:focusable="true"
            android:paddingHorizontal="4dp"
            android:paddingVertical="2dp"
            android:text=""
            android:textColor="@color/ai_icontext1"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:text="+91-22-47790159" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_chile"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/layout_tips"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintWidth_percent="0.8">

        <TextView
            android:id="@+id/tv_chile_emoji"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="ðŸ‡®ðŸ‡¨"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_chile_code"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            tools:text="CL"
            android:textColor="@color/ai_icontext1"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_chile_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/cov_phone_number_background"
            android:clickable="true"
            android:focusable="true"
            android:paddingHorizontal="4dp"
            android:paddingVertical="2dp"
            android:text=""
            android:textColor="@color/ai_icontext1"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:text="+54-911-52465127" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_tips"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintWidth_percent="0.84">

        <ImageButton
            android:id="@+id/btn_tips"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/common_ic_notice"
            app:layout_constraintBottom_toBottomOf="@id/tv_ai_vad_high"
            app:layout_constraintStart_toEndOf="@+id/tv_ai_vad_high"
            app:layout_constraintTop_toTopOf="@id/tv_ai_vad_high" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_weight="1"
            android:text="@string/cov_sip_internal_call_tips"
            android:textColor="@color/ai_icontext2"
            android:textSize="12sp" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>