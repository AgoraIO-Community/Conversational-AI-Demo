<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    android:layout_gravity="bottom"
    android:background="@android:color/transparent">

    <LinearLayout
        android:id="@+id/ll_calling"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginHorizontal="40dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="gone"
        tools:visibility="visible">

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_cc"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:backgroundTint="@android:color/transparent"
            app:cardCornerRadius="36dp"
            app:cardElevation="0dp">

            <ImageButton
                android:id="@+id/btn_cc"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:background="@drawable/btn_bg_block1_selector"
                android:src="@drawable/scene_detail_captions"
                app:tint="@color/ai_icontext1" />
        </androidx.cardview.widget.CardView>


        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_mic"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:backgroundTint="@android:color/transparent"
            app:cardCornerRadius="36dp"
            app:cardElevation="0dp">

            <ImageButton
                android:id="@+id/btn_mic"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/btn_bg_block1_selector"
                android:src="@drawable/agent_user_speaker" />
        </androidx.cardview.widget.CardView>

        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_end_call"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:backgroundTint="@android:color/transparent"
            app:cardCornerRadius="36dp"
            app:cardElevation="0dp">

            <ImageButton
                android:id="@+id/btn_end_call"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:background="@drawable/btn_bg_block1_selector"
                android:src="@drawable/scene_detail_close"
                app:tint="@color/ai_icontext1" />
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_join_call"
        android:layout_width="0dp"
        android:layout_height="58dp"
        android:layout_gravity="center"
        android:background="@drawable/btn_join_call_selector"
        android:gravity="center_horizontal|center_vertical"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintWidth_percent="0.84"
        tools:visibility="visible">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:src="@drawable/cov_detail_join_call"
            app:tint="@color/ai_icontext1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cov_detail_join_call"
            android:textColor="@color/ai_icontext1"
            android:textSize="18sp" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>