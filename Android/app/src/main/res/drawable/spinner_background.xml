<!-- res/drawable/spinner_background_with_arrow.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 背景层 -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#1D1D1D"/> <!-- 背景颜色 -->
            <corners android:radius="8dp"/> <!-- 圆角 -->
            <stroke
                android:width="1dp"
                android:color="#1DFFFFFF"/> <!-- 边框颜色和宽度 -->
        </shape>
    </item>
    <!-- 下箭头图标层 -->
    <item
        android:right="20dp"
        android:width="10dp"
        android:height="5dp"
        android:drawable="@drawable/expand_more"
        android:gravity="center|right">
    </item>
</layer-list>